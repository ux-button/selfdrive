generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id @default(uuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  folder   Folder[]
  file     File[]
}

model Folder {
  id      String  @id @default(uuid())
  name    String
  root    String?
  owner   User    @relation(fields: [ownerId], references: [id])
  ownerId String
}

model File {
  id      String @id @default(uuid())
  name    String
  root    String
  size    Float
  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String
}
